<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <!--important meta tags-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
          rel="stylesheet">
    <!--favicon-->
    <link rel="icon" href="~/Content/Images/favicon.ico" type="image/gif">
    <!--external CSS-->
    <link rel="stylesheet" href="~/Content/CSS/Custom/style.css">
    <!--responsive CSS-->
    <link rel="stylesheet" href="~/Content/CSS/Custom/responsive.css">
    <!--jquery-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <!--custom js file-->
    <script src="~/Scripts/JS/Custom/script.js"></script>
    <!--bootstrap CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!--fontawesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
          crossorigin="anonymous" />
</head>
<body>
    <section id="@ViewBag.Title">
        @if (Session["user"] != null)
        {
            <nav class="navbar navbar-expand-md navbar-expand-sm navbar-expand-lg sticky-top white-nav-top">
                <div class="container">
                    <div class="nav-header">
                        <span id="mobile-nav-open-btn">
                            <img src="~/Content/Images/open2.png" alt="open" style="width:25px;height:25px">
                        </span>
                        <a href="@Url.Action("Home", "Home")">
                            <img src="@Url.Content("~/Content/Logo/logo.png")" height="28" alt="logo" />
                        </a>
                    </div>
                    <div id="nav-menu">
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">@Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item dropdown">
                                    <a href="" class="nav-link" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <img src="@Session["UserImg"]" class="rounded-circle" alt="user" style="width:50px;height:40px">
                                    </a>
                                    <div class="dropdown-menu">
                                        @Html.ActionLink("My Profile", "MyProfile", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Downloads", "MyDownload", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Sold Notes", "MySoldNotes", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Auth", null, new { @class = "dropdown-item shadow-none" })
                                        <button type="submit" class="dropdown-item shadow-none" data-toggle="modal" data-target="#modalLogOut">
                                            LOGOUT
                                        </button>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <button type="submit" class="nav-link btn shadow-none" data-toggle="modal" data-target="#modalLogOut">
                                        Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--mobile menu-->
                    <div id="mobile-nav">
                        <span id="mobile-nav-close-btn">
                            <img src="~/Content/Images/close2.png" alt="close" style="width:25px;height:25px">
                        </span>
                        <div id="navbar-nav-content">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">@Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item dropright">
                                    <a href="" class="nav-link" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <img src="@Session["UserImg"]" class="rounded-circle" alt="logo" style="width:40px;height:40px">
                                    </a>
                                    <div class="dropdown-menu">
                                        @Html.ActionLink("My Profile", "MyProfile", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Downloads", "MyDownload", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Sold Notes", "MySoldNotes", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("My Rejected Notes", "MyRejectedNotes", "Home", null, new { @class = "dropdown-item shadow-none" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Auth", null, new { @class = "dropdown-item shadow-none" })
                                        <button type="submit" class="dropdown-item shadow-none" data-toggle="modal" data-target="#modalLogOut">
                                            LOGOUT
                                        </button>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <button type="submit" class="nav-link btn shadow-none" data-toggle="modal" data-target="#modalLogOut">
                                        Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()
            </div>

            <!-- Modal when click on logout button -->
            <div class="modal fade" id="modalLogOut" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&#10005;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="text-center"><b>Are you sure, you want to logout ?</b></p>
                            <div class="modal-confirmation">
                                @Html.ActionLink("Yes", "LogOut", "Auth", null, new { @class = "btn shadow-none" })
                                <a class="btn shadow-none" data-dismiss="modal">
                                    No
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <nav class="navbar navbar-expand-md navbar-expand-sm navbar-expand-lg sticky-top white-nav-top">
                <div class="container">
                    <div class="nav-header">
                        <span id="mobile-nav-open-btn">
                            <img src="~/Content/Images/open2.png" alt="open" style="width:25px;height:25px">
                        </span>
                        <a href="@Url.Action("Home", "Home")">
                            <img src="@Url.Content("~/Content/Logo/logo.png")" height="28" alt="logo" />
                        </a>
                    </div>
                    <div id="nav-menu">
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">@Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">
                                    @Html.ActionLink("LogIn", "LogIn", "Auth", null, new { @class = "nav-link btn shadow-none" })
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--mobile menu-->
                    <div id="mobile-nav">
                        <span id="mobile-nav-close-btn">
                            <img src="~/Content/Images/close2.png" alt="close" style="width:25px;height:25px">
                        </span>
                        <div id="navbar-nav-content">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">@Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">
                                    @Html.ActionLink("LogIn", "LogIn", "Auth", null, new { @class = "nav-link btn shadow-none" })
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()
            </div>
        }

    </section>
    <div>
        <footer class="footer-row">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-6">Copyright &#169; Tatvasoft All Rights Reserved.</div>
                    <div class="col-md-6 col-sm-6 col-6 text-right social-icons">
                        <a href="" class="text-center"><i class="fab fa-facebook-f"></i></a>
                        <a href="" class="text-center"><i class="fab fa-twitter"></i></a>
                        <a href="" class="text-center"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!--jquery-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

    <!--popper.js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
            crossorigin="anonymous"></script>

    <!--bootstrap.js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"></script>

    <!--custom js file-->
    <script src="~/Scripts/JS/Custom/script.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
