@model WebApplication.Models.User

<!DOCTYPE html>
<html>
<head>
    <!--important meta tags-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
          rel="stylesheet">
    <!--favicon-->
    <link rel="icon" href="images/favicon.ico" type="image/gif">
    <!--external CSS-->
    <link rel="stylesheet" href="~/Content/CSS/Custom/style.css">
    <!--responsive CSS-->
    <link rel="stylesheet" href="~/Content/CSS/Custom/responsive.css">
    <!--bootstrap CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!--fontawesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
          crossorigin="anonymous" />
</head>

<body>
    <section id="signup">
            @using (Html.BeginForm("SignUp","Auth",FormMethod.Post))
            {
                <div id="signup-form-box">
                    <div class="text-center form-logo">
                        <img src="~/Content/Logo/top-logo.png" alt="form-logo">
                    </div>
                    <div class="form">
                        @Html.AntiForgeryToken()
                        <div class="form-heading text-center">
                            <h1>Create an Account</h1>
                            <h2>Enter your details to signup</h2>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.LabelFor(m => m.Fname, htmlAttributes: new { @class = "form-label RowText" })
                        @Html.EditorFor(m => m.Fname, new { htmlAttributes = new { @class = "form-control shadow-none", placeholder = "Enter your First name" } })
                        <div>
                            @Html.ValidationMessageFor(m => m.Fname, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(m => m.Lname, htmlAttributes: new { @class = "form-label RowText" })
                        @Html.EditorFor(m => m.Lname, new { htmlAttributes = new { @class = "form-control shadow-none", placeholder = "Enter your Last name" } })
                        <div>
                            @Html.ValidationMessageFor(m => m.Lname, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label RowText" })
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control shadow-none", placeholder = "Enter your email address" } })
                        <div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("EmailExist", new { @class = "text-danger" })
                        </div>


                        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label RowText" })
                        <div class="password-container">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control shadow-none", placeholder = "Enter your password", type = "password" } })
                            <div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <span toggle="#Password" class="far fa-eye toggle-password"></span>
                        </div>

                        @Html.LabelFor(m => m.Confirm_Password, htmlAttributes: new { @class = "form-label RowText" })
                        <div class="password-container">
                            @Html.EditorFor(m => m.Confirm_Password, new { htmlAttributes = new { @class = "form-control shadow-none", placeholder = "Re-enter your password.", type = "password" } })
                            <div>
                                @Html.ValidationMessageFor(m => m.Confirm_Password, "", new { @class = "text-danger" })
                            </div>
                            <span toggle="#Confirm_Password" class="far fa-eye toggle-password"></span>
                        </div>

                        <button type="submit" class="btn shadow-none RowText">SIGN UP</button>
                        <div class="bottom-text text-center">
                            Already have an account?
                            <span>@Html.ActionLink("Log In", "LogIn", "Auth")</span>
                        </div>
                    </div>
                </div>
            }
    </section>

    <!--jquery-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

    <!--popper.js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
            crossorigin="anonymous"></script>

    <!--bootstrap.js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"></script>

    <!--custom js file-->
    <script src="~/Scripts/JS/Custom/script.js"></script>
</body>

</html>